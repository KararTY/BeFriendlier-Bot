{
  "extends": "./node_modules/adonis-preset-ts/tsconfig",
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "WIP"
  ],
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "incremental": true,
    "rootDir": ".",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "types": [
      "node"
    ]
  }
}